<% if current_admin.admin? %>
<div class="container">
  <div class="page-padding">
    <div class="page-title">
      <h3> Upload infos on your brand</h3>
    </div>
    <div class="form">
      <%= simple_form_for(@brand_info) do |f| %>
        <%= f.input :title, placeholder: "Le vin c'est la terre / Wine is the earth", label: "Title:" %>
        <br>
        <%= f.rich_text_area :content, placeholder: "All of our wines are organic to respect the ...", label: "Description:" %>
        <br>
        <%= f.input :side, as: :radio_buttons, collection: ["Left", "Right"], label: "Position:" %>
        <div class="form-button">
          <button>
            <%= f.button :submit, "Publish" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% else %>
  <div class="container">
    <p>You're not authorized to access this page.</p>
  </div>
<% end  %>
