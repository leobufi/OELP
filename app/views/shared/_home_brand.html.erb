<div class="home-section mid-h brand" data-scrolled-animations-target="mouettePosition" data-action="scroll@window->scrolled-animations#translateX">
  <div class="left-side-umbrella">
    <%= image_tag("SVG/OELP_parasol_vert.svg") %>
  </div>
  <div class="right-side-mouette" data-scrolled-animations-target="mouette">
    <%= image_tag("SVG/OELP_mouette1.svg") %>
  </div>
  <div class="page-padding brand">
    <div class="baseline">
      <% @baselines.each do |b| %>
        <p><%= b.baseline %></p>
      <% end %>
    </div>
    <div class="brand-infos" data-action="scroll@window->scrolled-animations#translateX">
      <% @brand_infos.where(side: "Left").each do |b| %>
        <div class="infos left">
          <h2><%= b.title %></h2>
          <p><%= b.content %></p>
        </div>
      <% end %>
      <% @brand_infos.where(side: "Right").each do |b| %>
        <div class="infos">
          <h2><%= b.title %></h2>
          <p><%= b.content %></p>
        </div>
      <% end %>
    </div>
    <div class="cheers">
      <div class="can-illus flipped">
        <%= image_tag("SVG/OELP_verre.svg") %>
      </div>
      <div class="text">
        <h2>Tchin tchin !</h2>
        <h2>Cheers !</h2>
      </div>
      <div class="can-illus">
        <%= image_tag("SVG/OELP_bouteilles.svg") %>
      </div>
    </div>
  </div>
</div>
