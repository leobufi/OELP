<% if current_admin.admin? %>
<div class="container">
  <div class="page-padding">
    <div class="page-title">
      <h3> Replace photo</h3>
    </div>
    <div class="form">
      <%= simple_form_for(@photo) do |f| %>
        <%= f.input :photo, as: :file, label: "Photo :" %>
        <%= f.input :side, as: :radio_buttons, collection: ["Left", "Right"], label: "Position:" %>
        <div class="form-button">
          <button>
            <%= f.button :submit, "Publish" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% else %>
  <div class="container">
    <p>You're not authorized to access this page.</p>
  </div>
<% end  %>
